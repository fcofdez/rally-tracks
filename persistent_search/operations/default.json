    {
      "name": "index-append",
      "operation-type": "bulk",
      "bulk-size": {{bulk_size | default(5000)}},
      "ingest-percentage": {{ingest_percentage | default(100)}},
      "corpora": "http_logs"
    },
    {
      "name": "default",
      "operation-type": "search",
      "index": "logs-*",
      "body": {
        "query": {
          "match_all": {}
        }
      }
    },
    {
      "name": "term",
      "operation-type": "search",
      "index": "logs-*",
      "body": {
        "query": {
          "term": {
            "request.raw": {
              "value": "GET / HTTP/1.0"
            }
          }
        }
      }
    },
    {
      "name": "range",
      "operation-type": "persistent-search",
      "index": "logs-*",
      "body": {
        "query": {
          "range": {
            "@timestamp": {
              "gte": "now-{{'15-05-1998' | days_ago(now)}}d/d",
              "lt": "now/d"
            }
          }
        }
      }
    },
    {
      "name": "regular-search-hourly-agg",
      "operation-type": "search",
      "index": "logs-*",
      "body": {
        "size": 0,
        "aggs": {
          "by_hour": {
            "date_histogram": {
              "field": "@timestamp",
              "calendar_interval": "hour"
            }
          }
        }
      }
    },
    {
      "name": "persistent-hourly-agg-range",
      "operation-type": "persistent-search",
      "index": "logs-*",
      "body": {
        "size": 0,
        "query": {
          "range": {
            "@timestamp": {
              "gte": "now-{{'15-05-1998' | days_ago(now)}}d/d",
              "lt": "now/d"
            }
          }
        },
        "aggs": {
          "by_hour": {
            "date_histogram": {
              "field": "@timestamp",
              "calendar_interval": "hour"
            }
          }
        }
      }
    },
    {
      "name": "persistent-hourly-agg",
      "operation-type": "persistent-search",
      "index": "logs-*",
      "body": {
        "size": 0,
        "aggs": {
          "by_hour": {
            "date_histogram": {
              "field": "@timestamp",
              "calendar_interval": "hour"
            }
          }
        }
      }
    },
    {
      "name": "desc_sort_timestamp",
      "operation-type": "search",
      "index": "logs-*",
      "body": {
        "query": {
          "match_all": {}
        },
        "sort" : [
          {"@timestamp" : "desc"}
        ]
      }
    },
    {
      "name": "asc_sort_timestamp",
      "operation-type": "search",
      "index": "logs-*",
      "body": {
        "query": {
          "match_all": {}
        },
        "sort" : [
          {"@timestamp" : "asc"}
        ]
      }
    }
